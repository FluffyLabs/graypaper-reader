    "@biomejs/biome": "^1.8.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.7.5",
    "tsx": "^4.19.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@fluffylabs/links-metadata": "^1.2.0",
    "dotenv": "^16.4.5",
    "matrix-js-sdk": "^36.2.0"
  }
